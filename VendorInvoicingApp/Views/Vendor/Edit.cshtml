<!-- This is edit page-->
@model VendorViewModel

@{
    ViewData["Title"] = "Edit the vendor";
}

<!--Those are for getting information from a user using input tag-->
<form asp-controller="Vendor" asp-action="EditTheVendor" method="post" enctype="application/x-www-form-urlencoded">
    <partial name="Input.cshtml" />
    <input type="hidden" asp-for="ActiveVendor.VendorId" />

    <!--If user click Save button, the information will be saved to databases-->
    <button type="submit" class="btn btn-primary">Save</button>
    <!--If user click click button, the index page will be shown-->
    <a asp-controller="Vendor" asp-action="Vendors" class="btn btn-primary">Cancel</a>
</form>